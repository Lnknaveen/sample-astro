---
const { post } = Astro.props;
---

<section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-10">
  <div
    class="flex flex-col items-center text-center md:flex-row md:items-center gap-10 bg-white rounded-xl shadow-md p-6"
  >
    <div
      class="w-full md:w-2/5 overflow-hidden rounded-xl bg-no-repeat bg-cover lg:bg-[0] lg:bg-[70%]"
    >
      <img
        src={post.frontmatter?.image?.url}
        alt={post.frontmatter?.image?.alt}
        class="rounded-xl shadow-lg w-full object-cover transition-transform duration-500 hover:scale-110"
      />
    </div>

    <div class="w-full md:w-3/5">
      <h2 class="text-3xl font-bold text-gray-900">
        {post.frontmatter.description}
      </h2>
      <p class="mt-2 mb-8">
        by {" "}
        <span class="font-bold">{post.frontmatter.author}</span> on
        <!-- <span class="mr-2">
          {post.frontmatter.pubDate.toString().slice(0, 10)}</span
        > -->
      </p>
      <section class="flex flex-wrap justify-center gap-4">
        {
          post.frontmatter.tags.map((tag: string) => (
            <div class="mb-6 transition-transform duration-500 hover:scale-110">
              <a
                class="px-6 py-3 text-gray-700 font-medium rounded-lg shadow-md bg-gray-200 cursor-pointer"
                href={`/blog/tags/${tag}/`}
              >
                {tag}
              </a>
            </div>
          ))
        }
        <div class="mb-6 transition-transform duration-500 hover:scale-110">
          <a
            href={post.url}
            class="px-6 py-3 font-medium rounded-lg shadow-md cursor-pointer text-white bg-slate-800"
          >
            learn more
          </a>
        </div>
      </section>
      <div class="mt-10 transition-transform duration-500 hover:scale-110">
      </div>
    </div>
  </div>
</section>
